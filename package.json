{
  "name": "compy",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./dist/*"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:npm": "tsc --project tsconfig.npm.json && tsc-alias",
    "build:docs": "typedoc",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "lint:write": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typedoc": "^0.25.12",
    "typedoc-material-theme": "^1.0.2",
    "typedoc-plugin-remove-references": "^0.0.6",
    "typedoc-plugin-rename-defaults": "^0.7.0",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "lodash": "^4.17.21",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "yup": "^1.4.0"
  }
}
