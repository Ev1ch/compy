{
  "private": true,
  "workspaces": [
    "packages/*",
    "tests",
    "speedtest/*"
  ],
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ev1ch/compyto.git"
  },
  "bugs": {
    "url": "https://github.com/Ev1ch/compyto/issues"
  },
  "scripts": {
    "build:all": "sh build.sh",
    "publish:all": "sh publish.sh",
    "prepare:all": "sh prepare.sh",
    "build:docs": "typedoc",
    "format": "prettier --check ./packages",
    "format:write": "prettier --write ./packages",
    "lint": "eslint ./packages --ext .ts,.tsx",
    "lint:write": "eslint ./packages --ext .ts,.tsx --fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typedoc": "^0.25.12",
    "typedoc-material-theme": "^1.0.2",
    "typescript": "^5.4.2"
  }
}
