{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ev1ch/compyto.git"
  },
  "bugs": {
    "url": "https://github.com/Ev1ch/compyto/issues"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:docs": "typedoc",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint ./src --ext .ts",
    "lint:write": "eslint ./src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typedoc": "^0.25.12",
    "typedoc-material-theme": "^1.0.2",
    "typedoc-plugin-remove-references": "^0.0.6",
    "typedoc-plugin-rename-defaults": "^0.7.0",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
