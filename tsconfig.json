{
  "compilerOptions": {
    "strict": true,
    "lib": ["esnext"],
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["packages/*"]
    },
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/tests/**/*", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
