{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "module": "es6",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.node.json" },
    {
      "path": "../logging"
    },
    {
      "path": "../monitoring"
    },
    {
      "path": "../utils"
    },
    {
      "path": "../core"
    },
    {
      "path": "../connections"
    },
    {
      "path": "../runner"
    },
    {
      "path": "../settings"
    }
  ]
}
