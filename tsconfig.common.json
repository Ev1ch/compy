{
  "compilerOptions": {
    "strict": true,
    "lib": ["esnext"],
    "module": "es6",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./src"
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
